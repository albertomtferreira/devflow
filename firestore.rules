rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'projects' collection
    match /projects/{projectId} {
      // Allow reading a list of projects (for the dashboard) ONLY if 
      // the query filters by the user's own ID.
      // This is the key rule for the dashboard page.
      allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;
      
      // Allow getting a single project, and updating/deleting it, if the user
      // is the owner of that project.
      allow get, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Allow creating a new project if the user is signed in and the new
      // project's userId is set to their own ID.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      // Deny reads and writes to all subcollections by default for now.
      // We will add rules for these later.
      match /{allPaths=**} {
        allow read, write: if false;
      }
    }

    // Deny access to all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
