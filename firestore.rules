rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Debug function to expose values in error messages
    function debug(value) {
      return value;
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    match /projects/{projectId} {
      // Temporarily open get for simplicity while we debug list
      allow get: if isSignedIn();

      // Only change this line for debugging
      allow list: if debug(request.query.where) == debug(request.auth);

      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
      
      // Allow reads and writes on all subcollections for now
      match /{document=**} {
        allow read, write: if isSignedIn();
      }
    }
  }
}