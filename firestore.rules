rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    match /projects/{projectId} {
      // Allow reading/writing a single document if the user is the owner
      allow get, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;

      // Allow creating a document if the user is setting themselves as the owner
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      // Allow querying the collection only if the query is filtered by the user's own ID
      allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;
    }
  }
}